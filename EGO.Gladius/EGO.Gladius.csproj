<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>0.1.0-alpha</Version>
    <AssemblyVersion>0.1.0</AssemblyVersion>
    <FileVersion>0.1.0</FileVersion>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>EGO.Gladius</Title>
    <PackageOutputPath>$(OutputPath)\nuget</PackageOutputPath>
    <PackAsTool>False</PackAsTool>
    <PackageProjectUrl>https://github.com/exoticgenius/EGO.Gladius</PackageProjectUrl>
    <RepositoryUrl>https://github.com/exoticgenius/EGO.Gladius</RepositoryUrl>
    <PackageReadmeFile>Readme.md</PackageReadmeFile>
    <PackageLicenseFile>lisence.md</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Update="lisence.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
